{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "semi": [2, "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "linebreak-style": 0,
    "jsx-a11y/anchor-is-valid": 0
  },
  "env": {
    "jest": true,
    "browser": true
  },
  "plugins": [
    "flowtype"
  ]
}